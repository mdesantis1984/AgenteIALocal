<UserControl x:Class="AgenteIALocalVSIX.Options.AgenteOptionsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="Base URL:" VerticalAlignment="Center" Margin="0,0,8,8" />
        <TextBox x:Name="BaseUrlTextBox" Grid.Row="0" Grid.Column="1" Margin="0,0,0,8" />

        <TextBlock Grid.Row="1" Grid.Column="0" Text="Model:" VerticalAlignment="Center" Margin="0,0,8,8" />
        <TextBox x:Name="ModelTextBox" Grid.Row="1" Grid.Column="1" Margin="0,0,0,8" />

        <TextBlock Grid.Row="2" Grid.Column="0" Text="Api Key:" VerticalAlignment="Center" Margin="0,0,8,0" />
        <TextBox x:Name="ApiKeyTextBox" Grid.Row="2" Grid.Column="1" Margin="0,0,0,0" />
    </Grid>
</UserControl>