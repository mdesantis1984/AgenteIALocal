<UserControl x:Class="AgenteIALocalVSIX.ToolWindows.AgenteIALocalControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"
             Foreground="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}">

    <UserControl.Resources>
        <!-- Local brushes and sizes to improve visual fidelity with mock -->
        <SolidColorBrush x:Key="HeaderMutedBrush" Color="#FF9AA0A6" />
        <SolidColorBrush x:Key="AccentBackgroundBrush" Color="#FF2D2D30" />
        <Thickness x:Key="HeaderElementSpacing">8,0,8,0</Thickness>
        <Style x:Key="IconButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="4" />
            <Setter Property="MinWidth" Value="24" />
            <Setter Property="MinHeight" Value="24" />
            <Setter Property="FontSize" Value="12" />
        </Style>
    </UserControl.Resources>

    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,8">
            <TextBlock Text="Agente IA Local" FontWeight="Bold" FontSize="18" VerticalAlignment="Center" />
            <TextBlock Width="12" />
            <TextBlock Text="State:" FontWeight="SemiBold" VerticalAlignment="Center" Margin="12,0,4,0" Foreground="{StaticResource HeaderMutedBrush}" />

            <!-- State indicator: icon + label bound to code-behind properties -->
            <md:PackIcon x:Name="StateIcon"
                         Kind="{Binding StateIconKind}"
                         Width="20" Height="20"
                         VerticalAlignment="Center"
                         Foreground="{Binding StateColor}"
                         Margin="0,0,6,0" />

            <TextBlock x:Name="StateLabelText"
                       Text="{Binding StateLabel}"
                       VerticalAlignment="Center"
                       FontFamily="Consolas"
                       FontSize="12"
                       Foreground="{Binding StateColor}"
                       Margin="0,0,6,0" />

            <Button x:Name="SettingsButton" Width="28" Height="28" Margin="8,0,0,0" ToolTip="Settings" Click="SettingsButton_Click" Style="{StaticResource IconButtonStyle}">
                <TextBlock Text="âš™" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center" />
            </Button>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,8">
            <TextBlock Text="Solution:" FontWeight="SemiBold" Width="80" />
            <TextBlock x:Name="SolutionNameText" Text="(no solution)" />
            <TextBlock Text="    " />
            <TextBlock Text="Projects:" FontWeight="SemiBold" Width="80" />
            <TextBlock x:Name="ProjectCountText" Text="0" />
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,8" VerticalAlignment="Center" HorizontalAlignment="Left">
            <!-- Chat history combo and actions -->
            <ComboBox x:Name="ChatComboBox" Width="280" Height="26" Margin="0,0,8,0" SelectionChanged="ChatComboBox_SelectionChanged" VerticalContentAlignment="Center" />
            <Button x:Name="NewChatButton" Width="28" Height="26" Margin="0,0,4,0" ToolTip="New Chat" Click="NewChatButton_Click" Style="{StaticResource IconButtonStyle}">+</Button>
            <Button x:Name="DeleteChatButton" Width="28" Height="26" Margin="0,0,12,0" ToolTip="Delete Chat" Click="DeleteChatButton_Click" Style="{StaticResource IconButtonStyle}">-</Button>

            <Button x:Name="RunButton" Content="Run" Width="80" Height="28" Click="RunButton_Click" IsEnabled="{Binding RunButtonEnabled}" Margin="0,0,8,0" />
            <Button x:Name="ClearButton" Content="Clear" Width="80" Height="28" Margin="0,0,0,0" Click="ClearButton_Click" IsEnabled="{Binding ClearButtonEnabled}" />
        </StackPanel>

        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="300" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <!-- Mock Changes accordion -->
                <Expander Header="{Binding ModifiedFiles.Count, StringFormat=Changes ({0})}" IsExpanded="{Binding IsChangesExpanded}" Margin="0,0,0,8">
                    <StackPanel>
                        <ItemsControl ItemsSource="{Binding ModifiedFiles}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" FontFamily="Consolas" FontSize="12" />
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
                            <Button Content="Mantener" Width="80" Margin="0,0,8,0" Click="ApplyChanges_Click" />
                            <Button Content="Descartar" Width="80" Margin="0,0,8,0" Click="RevertChanges_Click" />
                            <Button Content="..." Width="40" Click="ClearChanges_Click" />
                        </StackPanel>
                    </StackPanel>
                </Expander>

                <TabControl Margin="0,4,0,0">
                    <TabItem Header="Request">
                        <GroupBox Header="Request" Margin="0" Padding="6">
                            <TextBox x:Name="RequestJsonText"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     VerticalScrollBarVisibility="Auto"
                                     FontFamily="Consolas"
                                     FontSize="12"
                                     Height="140"
                                     IsReadOnly="{Binding IsPromptReadOnly}" />
                        </GroupBox>
                    </TabItem>
                    <TabItem Header="Response">
                        <GroupBox Header="Response JSON" Margin="0" Padding="6">
                            <ScrollViewer>
                                <TextBlock x:Name="ResponseJsonText" TextWrapping="Wrap" FontFamily="Consolas" FontSize="12" />
                            </ScrollViewer>
                        </GroupBox>
                    </TabItem>
                    <TabItem Header="Log">
                        <ScrollViewer>
                            <TextBlock x:Name="LogText" TextWrapping="Wrap" FontFamily="Consolas" FontSize="11" Margin="0,8,0,0" />
                        </ScrollViewer>
                    </TabItem>
                </TabControl>
            </StackPanel>

            <!-- Inline settings panel (initially collapsed) -->
            <Border Grid.Column="1" Margin="8,0,0,0" BorderBrush="Gray" BorderThickness="1" Padding="8" Background="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}" Visibility="Collapsed" x:Name="SettingsPanel">
                <StackPanel>
                    <TextBlock Text="Settings (active server)" FontWeight="Bold" Margin="0,0,0,8" />

                    <TextBlock Text="Active Server ID:" />
                    <TextBox x:Name="ActiveServerIdTextBox" />

                    <TextBlock Text="Base URL:" Margin="0,8,0,0" />
                    <TextBox x:Name="ServerBaseUrlTextBox" />

                    <TextBlock Text="Model:" Margin="0,8,0,0" />
                    <TextBox x:Name="ServerModelTextBox" />

                    <TextBlock Text="API Key:" Margin="0,8,0,0" />
                    <TextBox x:Name="ServerApiKeyTextBox" />

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
                        <Button x:Name="SaveSettingsButton" Content="Save" Width="80" Click="SaveSettingsButton_Click" />
                        <Button x:Name="CloseSettingsButton" Content="Close" Width="80" Margin="8,0,0,0" Click="CloseSettingsButton_Click" />
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
